
<section>
  <div class="top-head">
    <span></span>
    <h1>All ingredients</h1>
    <%= link_to "Add +", new_ingredient_path() %>
  </div>
  <div class="all">
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0">
        <thead>
          <tr>
            <th>Ingredients</th>
            <th>Protein</th>
            <th>Carbohydrate</th>
            <th>Lipid</th>
            <th>Kcal/100g</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0" >
        <tbody>
            <% @ingredients.each do |ingredient| %>
              <tr>
                <td><%= link_to ingredient.name, ingredient_path(ingredient) %></td>
                <td><%= ingredient.protein %></td>
                <td><%= ingredient.carbohydrate %></td>
                <td><%= ingredient.lipid %></td>
                <td><%= ingredient.kcal %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
